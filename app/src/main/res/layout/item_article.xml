<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/property_image_1"
        android:layout_width="334dp"
        android:layout_height="305dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="39dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_property1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/property_name_1"
        android:layout_width="194dp"
        android:layout_height="24dp"
        android:layout_marginEnd="235dp"
        android:text="Luxury Villa"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/property_image_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/property_image_1"
        app:layout_constraintTop_toBottomOf="@+id/property_image_1" />

    <TextView
        android:id="@+id/property_price_1"
        android:layout_width="84dp"
        android:layout_height="26dp"
        android:gravity="right"
        android:text="500,000 pkr"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/property_image_1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/property_name_1"
        app:layout_constraintTop_toBottomOf="@+id/property_image_1" />

    <TextView
        android:id="@+id/property_description_1"
        android:layout_width="333dp"
        android:layout_height="27dp"
        android:layout_marginTop="28dp"
        android:text="A beautiful villa with modern architecture and style."
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/property_price_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/property_name_1"
        app:layout_constraintTop_toBottomOf="@+id/property_image_1" />

    <TextView
        android:id="@+id/property_location_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Karachi, Pakistan"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/property_description_1"
        app:layout_constraintStart_toStartOf="@+id/property_description_1"
        app:layout_constraintTop_toBottomOf="@+id/property_description_1" />

</androidx.constraintlayout.widget.ConstraintLayout>